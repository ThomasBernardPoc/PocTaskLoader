<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PocTaskLoader.Core"
             xmlns:Converters="clr-namespace:PocTaskLoader.Core.Commons.Converters"
             x:Class="PocTaskLoader.Core.App">
    <Application.Resources>
        <ResourceDictionary>

            <Converters:BoolToInvertedBoolValueConverter x:Key="BoolToInvertedBoolValueConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
